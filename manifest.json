{
  "manifest_version": 3,
  "action": {
      "default_icon": {
          "16": "icon16.png",
          "48": "icon48.png",
          "128": "icon128.png"
      },
      "default_popup": "popup.html"
  },
  "background": {
      "service_worker": "background.js"
  },
  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["content.js"]
      }
  ],
  "description": "Replaces instances of 'Artificial Intelligence' terms with 'Baby Leprechans'.",
  "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
  },
  "name": "AI-Baby-Leprechans-Replacer",
  "permissions": ["scripting", "storage", "tabs"],
  "version": "1.0"
}
